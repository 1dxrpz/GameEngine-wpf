<UserControl x:Class="GameEngineApp.LayoutWindows.AssetIcons.FileIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameEngineApp.LayoutWindows.AssetIcons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="86" Height ="100" HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Grid Width="86" Height="100">
        <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Foreground="AliceBlue" Margin="10,66,0,0" TextAlignment="Center" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="66"></TextBlock>
        <Image Source="{Binding FileIconPath}" HorizontalAlignment="Left" Height="66" Margin="10,0,0,0" VerticalAlignment="Top" Width="66"/>
        <Rectangle x:Name="Selection" Visibility="{Binding Visible}" Fill="#30ffffff" HorizontalAlignment="Left" Height="92" VerticalAlignment="Top" Width="74" Margin="6,4,0,0"/>
    </Grid>
</UserControl>
