<UserControl x:Class="GameEngineApp.LayoutWindows.ProjectFilesWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameEngineApp.LayoutWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="450">
        <TreeView x:Name="FilesView" Background="Transparent" HorizontalAlignment="Left" Height="406" Margin="10,34,0,0" VerticalAlignment="Top" Width="356" BorderThickness="0">
        </TreeView>
        <Button Content="Expand All" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click">
        </Button>
        <Button Content="Collapse All" HorizontalAlignment="Left" Margin="90,9,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</UserControl>
